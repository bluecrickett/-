#include <stdio.h>

int main(){
    int i=0,j=0,p=0,v=0;
    printf ("Введите количество элементов массива: "); scanf ("%d", &p);
    int arr[p];
    printf ("Введите элементы массива для сортировки \n");
    for (i=0; i<p; i++){
        printf ("%d элемент = ", i+1); scanf ("%d", &arr[i]);
    }
    for (i=0; i < p-1; i++){
        for (j=0; j < p-i-1; j++) {
            if (arr[j]>arr[j+1]){
                v = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = v;
            }
        }
    }
    printf ("Отсортированный в порядке возрастания массив с использованием параметрического цикла: \n");
    for (i=0; i<p; i++){
        printf("%d", arr[i]); printf(" ");
    }
}

#include <stdio.h> //подключение библиотеки ввода и вывода

int main(){ //главная функция - точка входа в программу
    int i=0,j=0,p=0,v=0; //переменные
    printf ("Введите количество элементов массива: "); scanf ("%d", &p);
    int arr[p]; //массив
    printf ("Введите элементы массива для сортировки \n");
    for (i=0; i<p; i++){ 
        printf ("%d элемент = ", i+1); scanf ("%d", &arr[i]); //ввод элементов массива
    }
    i=0;
    while (i < p-1){ //сортировка элементов массива по убыванию
        j=0;
        while (j < p-i-1) {
            if (arr[j]<arr[j+1]){
                v = arr[j];
                arr[j] = arr[j+1];
                arr[j+1] = v;
            }
            j++;
        }
        i++;
    }
    printf ("Отсортированный в порядке убывания массив с использованием цикла с предусловием: \n");
    for (i=0; i<p; i++){ 
        printf("%d", arr[i]); printf(" "); //вывод отсортированного массива
    }
}
